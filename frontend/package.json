{
    "name": "journeyplanner",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "dev:host": "nuxt dev --host 0 --port 3000",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "prepare": "cd .. && husky frontend/.husky",
        "start": "concurrently \"infisical run --env=dev -- nuxt dev -o\" \"cd ../docker/dev && infisical run --env=dev -- docker compose up\" \"cd ../backend && wait-on tcp:3306 -d 10000 --log && infisical run --env=dev -- php artisan migrate\" \"cd ../backend && infisical run --env=dev -- php artisan serve\"",
        "start:host": "concurrently \"infisical run --env=dev -- nuxt dev --host 0 --port 3000 -o\" \"cd ../docker/dev && infisical run --env=dev -- docker compose up\" \"cd ../backend && wait-on tcp:3306 -d 5000 --log && infisical run --env=dev -- php artisan migrate\" \"cd ../backend && infisical run --env=dev -- php artisan serve\"",
        "start:staging": "concurrently \"infisical run --env=dev -- nuxt dev -o\" \"cd ../backend && infisical run --env=staging -- php artisan serve\"",
        "start:staging:host": "concurrently \"infisical run --env=dev -- nuxt dev --host 0 --port 3000 -o\" \"cd ../backend && infisical run --env=staging -- php artisan serve\"",
        "clone-staging-db": "cd ../docker/dev && @powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./clone_db.ps1",
        "install-all": "npm install && cd ../backend && npm install && composer install && cd ../docker/dev && docker compose pull"
    },
    "dependencies": {
        "@date-fns/utc": "^2.1.0",
        "@fullcalendar/core": "^6.1.17",
        "@fullcalendar/daygrid": "^6.1.15",
        "@fullcalendar/interaction": "^6.1.15",
        "@fullcalendar/timegrid": "^6.1.15",
        "@fullcalendar/vue3": "^6.1.17",
        "@gravatar-com/quick-editor": "^0.8.0",
        "@mapbox/mapbox-gl-geocoder": "^5.0.3",
        "@mapbox/search-js-web": "^1.3.0",
        "@nuxt/eslint": "^1.8.0",
        "@nuxt/image": "^1.11.0",
        "@nuxtjs/seo": "^3.1.0",
        "@pinia/nuxt": "^0.11.2",
        "@studiometa/vue-mapbox-gl": "^2.7.2",
        "@tolgee/vue": "^6.2.5",
        "@uppy/core": "^4.4.4",
        "@uppy/dashboard": "^4.3.2",
        "@uppy/drag-drop": "^4.1.2",
        "@uppy/file-input": "^4.2.2",
        "@uppy/locales": "^4.5.2",
        "@uppy/progress-bar": "^4.3.2",
        "@uppy/tus": "^4.2.2",
        "@uppy/vue": "^2.1.1",
        "@vee-validate/nuxt": "^4.15.1",
        "@vee-validate/yup": "^4.15.1",
        "concurrently": "^9.2.0",
        "date-fns": "^4.1.0",
        "file-saver": "^2.0.5",
        "js-confetti": "^0.12.0",
        "jszip": "^3.10.1",
        "lightgallery": "^2.8.3",
        "nuxt": "^3.16.0",
        "pinia": "^3.0.3",
        "primeicons": "^7.0.0",
        "primevue": "^3.52.0",
        "qrcode": "^1.5.4",
        "uuid": "^11.1.0",
        "vue": "^3.5.13",
        "vue-animated-counter": "^0.3.0",
        "vue-router": "^4.5.1",
        "yup": "^1.7.0"
    },
    "devDependencies": {
        "@nuxtjs/color-mode": "^3.5.2",
        "@nuxtjs/tailwindcss": "^6.14.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/mapbox__mapbox-gl-geocoder": "^5.0.0",
        "@types/mapbox-gl": "^3.4.1",
        "@types/qrcode": "^1.5.5",
        "eslint": "^9.28.0",
        "husky": "^9.1.5",
        "lint-staged": "^16.1.0",
        "mapbox-gl": "^3.14.0",
        "nuxt-auth-sanctum": "^0.6.6",
        "nuxt-primevue": "^3.0.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "typescript": "^5.9.2",
        "vue-tsc": "^2.2.10",
        "wait-on": "^8.0.4"
    },
    "lint-staged": {
        "*.*": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
